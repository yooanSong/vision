<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 빈 등록 -->
	<bean id="xxx" class="com.test.EchoBean" />

	<bean id="xxx2" class="com.test.EchoBean">
		<!-- 생성자에게 값을 설정 ==> 생성자 주입(constructor injection) -->
		<constructor-arg value="홍길동" />
	</bean>

	<bean id="xxx3" class="com.test.EchoBean">
		<constructor-arg name="aaa" value="33" />
		<constructor-arg name="bbb" value="홍길동" />
	</bean>





</beans> 

